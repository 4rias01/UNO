<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane styleClass="AnchorPane" stylesheets="@GameSceneStyle.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.myuno.controller.GameController">

    <StackPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <ImageView fx:id="cardOnDeskView" />
    </StackPane>

    <StackPane layoutX="30" AnchorPane.bottomAnchor="0" AnchorPane.topAnchor="0">
        <Button fx:id="robberButton" onAction="#handleRobberButton" styleClass="robber-button" />
    </StackPane>

    <StackPane layoutX="1000" AnchorPane.bottomAnchor="0" AnchorPane.topAnchor="0">
        <Button fx:id="unoButton" onAction="#handleUnoButton" styleClass="uno-button" />
    </StackPane>

    <StackPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="550">
        <HBox fx:id="deckOfPlayerOne" alignment="CENTER" spacing="-60" />
    </StackPane>

    <StackPane AnchorPane.bottomAnchor="550" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <HBox fx:id="deckOfPlayerTwo" alignment="CENTER" spacing="-60" />
    </StackPane>
   <Button fx:id="saveButton" alignment="TOP_CENTER" mnemonicParsing="false" onAction="#setOnActionSaveButton" prefHeight="60.0" prefWidth="60.0" styleClass="save-button" AnchorPane.leftAnchor="1270.0" AnchorPane.topAnchor="40.0" />

</AnchorPane>
