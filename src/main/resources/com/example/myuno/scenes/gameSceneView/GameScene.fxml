<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@GameSceneStyle.css"
            styleClass="AnchorPane"
            fx:controller="com.example.myuno.controller.GameController">

    <StackPane AnchorPane.bottomAnchor="0" AnchorPane.topAnchor="0"
               AnchorPane.rightAnchor="0" AnchorPane.leftAnchor="0">
        <ImageView fx:id="cardOnDeskView"/>
    </StackPane>

    <StackPane layoutX="990"
               AnchorPane.bottomAnchor="0" AnchorPane.topAnchor="0">
        <Button fx:id="robberButton"
                styleClass="robber-button" onAction="#handleRobberButton"/>
    </StackPane>

    <StackPane layoutX="80"
               AnchorPane.bottomAnchor="0" AnchorPane.topAnchor="0">
        <HBox alignment="CENTER" spacing="90">
            <Button fx:id="backButton"
                    styleClass="back-button" onAction="#handleBackButton"/>
            <Button fx:id="unoButton"
                    styleClass="uno-button" onAction="#handleUnoButton"/>
        </HBox>
    </StackPane>

    <StackPane AnchorPane.topAnchor="550" AnchorPane.bottomAnchor="0"
               AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <HBox alignment="CENTER" spacing="20">
            <HBox alignment="CENTER" spacing="-60" fx:id="deckOfPlayerOne"/>
            <VBox alignment="CENTER" spacing="10">
                <Label fx:id="playerName"/>
                <ImageView fx:id="playerImage"/>
            </VBox>
        </HBox>
    </StackPane>

    <StackPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="550"
               AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <HBox alignment="CENTER" spacing="20">
            <VBox alignment="CENTER" spacing="10">
                <ImageView>
                    <Image url= "@../../images/assets/ProfileScene/image.png"/>
                </ImageView>
                <Label text="IA"/>
            </VBox>
            <HBox alignment="CENTER" spacing="-60" fx:id="deckOfPlayerTwo"/>
        </HBox>
    </StackPane>

</AnchorPane>
