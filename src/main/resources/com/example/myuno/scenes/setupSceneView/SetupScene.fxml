<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane styleClass="AnchorPane" stylesheets="@SetupSceneStyle.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.myuno.controller.SetupController">

    <ImageView fitHeight="130.0" fitWidth="130.0" layoutX="5" layoutY="5">
        <Image url="@../../images/assets/SetupScene/logo.png" />
    </ImageView>

    <ImageView layoutX="140.0" layoutY="30.0">
        <Image url="@../../images/assets/SetupScene/uvName.png" />
    </ImageView>


    <HBox fx:id="hBoxExit" alignment="CENTER" layoutX="30" layoutY="670" spacing="15">

        <ImageView styleClass="Image">
            <Image url="@../../images/assets/SetupScene/backImage.png" />
        </ImageView>

        <Label text="Salir del juego" />
    </HBox>

    <Label alignment="CENTER" layoutY="90" styleClass="dialog-title" text="MENÚ" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="60">
    </Label>

    <StackPane layoutY="270" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <HBox alignment="CENTER" spacing="-70">
            <VBox alignment="CENTER" styleClass="VBoxOne">
                <Label fx:id="localLabel" styleClass="subtitleLabel" text="local" />
                <Button fx:id="localButton" onAction="#handleLocalButton">
                    <styleClass>
                        <String fx:value="Button" />
                        <String fx:value="local" />
                    </styleClass>
                </Button>
            </VBox>

            <VBox alignment="CENTER" styleClass="VBoxTwo">
                <Label fx:id="onlineLabel" styleClass="subtitleLabel" text="proximamente..." />
                <Button fx:id="onlineButton">
                    <styleClass>
                        <String fx:value="Button" />
                        <String fx:value="online" />
                    </styleClass>
                </Button>
            </VBox>

        </HBox>
    </StackPane>

    <VBox fx:id="exitDialog" alignment="CENTER" spacing="15" styleClass="dialog-box" AnchorPane.bottomAnchor="270" AnchorPane.leftAnchor="400" AnchorPane.rightAnchor="400" AnchorPane.topAnchor="270">

        <Label styleClass="dialog-title" text="Estas seguro?" />
        <Label styleClass="dialog-description" text="Presiona [SI] e irás directamente al escritorio de Windows" wrapText="true" />

        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="yesButton" onAction="#setOnActionYesButton" styleClass="dialog-button" text="Sí" />
            <Button fx:id="noButton" onAction="#setOnActionNoButton" styleClass="dialog-button" text="No" />
        </HBox>
    </VBox>
   <VBox fx:id="continueDialog" alignment="CENTER" layoutX="5.0" layoutY="-10.0" styleClass="continue-dialog" AnchorPane.bottomAnchor="299.0" AnchorPane.leftAnchor="450.0" AnchorPane.rightAnchor="450.0" AnchorPane.topAnchor="310.0">
      <children>
         <Label text="Deseas continuar la partida?" />
         <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
            <children>
               <Button fx:id="ContinueButton" mnemonicParsing="false" onAction="#handleContinueButton" styleClass="dialog-button" text="Sí" />
               <Button fx:id="newGameButton" mnemonicParsing="false" onAction="#handleNewGameButton" styleClass="dialog-button" text="No" />
            </children>
            <VBox.margin>
               <Insets top="20.0" />
            </VBox.margin>
         </HBox>
      </children>
   </VBox>

</AnchorPane>
