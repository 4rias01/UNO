<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import java.lang.String?>
<AnchorPane styleClass="AnchorPane"
            stylesheets="@SetupSceneStyle.css"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.myuno.controller.SetupController">

    <ImageView layoutY="5" layoutX="5"
               fitHeight="130.0" fitWidth="130.0">
        <Image url="@../../images/assets/SetupScene/logo.png" />
    </ImageView>

    <ImageView layoutY="30.0" layoutX="140.0">
        <Image url="@../../images/assets/SetupScene/uvName.png" />
    </ImageView>

    <HBox layoutX="30" layoutY="670"
          alignment="CENTER"
          spacing="15" fx:id="hBoxExit">

        <ImageView styleClass="Image">
            <Image url="@../../images/assets/SetupScene/backImage.png"/>
        </ImageView>

        <Label  text="Salir del juego"/>
    </HBox>

    <Label layoutY="90"
           AnchorPane.rightAnchor="60" AnchorPane.leftAnchor="0"
           alignment="CENTER"
           text="MENÚ" styleClass="dialog-title">
    </Label>

    <StackPane layoutY="230" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <HBox alignment="CENTER" spacing="-70">
            <VBox alignment="CENTER" styleClass="VBoxOne">
                <Label text="local" styleClass="subtitleLabel" fx:id="localLabel"/>
                <Button fx:id="localButton" onAction="#handleLocalButton">
                    <styleClass>
                        <String fx:value="Button" />
                        <String fx:value="local" />
                    </styleClass>
                </Button>
            </VBox>

            <VBox alignment="CENTER" styleClass="VBoxTwo">
                <Label text="continuar" styleClass="subtitleLabel" fx:id="continueLabel"/>
                <Button fx:id="continueButton" onAction="#handleContinueButton">
                    <styleClass>
                        <String fx:value="Button" />
                        <String fx:value="continue" />
                    </styleClass>
                </Button>
            </VBox>

        </HBox>
    </StackPane>

    <VBox alignment="CENTER" spacing="15"
          AnchorPane.topAnchor="270" AnchorPane.bottomAnchor="270"
          AnchorPane.leftAnchor="400" AnchorPane.rightAnchor="400"
          styleClass="dialog-box"
          fx:id="exitDialog">

        <Label text="Estas seguro?" styleClass="dialog-title"/>
        <Label text="Presiona [SI] e irás directamente al escritorio de Windows"
               wrapText="true" styleClass="dialog-description"/>

        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="yesButton" text="Sí" styleClass="dialog-button" onAction="#setOnActionYesButton"/>
            <Button fx:id="noButton" text="No" styleClass="dialog-button" onAction="#setOnActionNoButton"/>
        </HBox>
    </VBox>

    <StackPane AnchorPane.topAnchor="50" AnchorPane.rightAnchor="50"
               alignment="BOTTOM_RIGHT">
        <VBox alignment="CENTER" spacing="10">
            <Button fx:id="profileButton" styleClass="button-profile"
                    onAction="#handleProfileButton"/>
            <Label fx:id="profileLabel"/>
        </VBox>
    </StackPane>

</AnchorPane>
