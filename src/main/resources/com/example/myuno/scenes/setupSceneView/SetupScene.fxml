<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import java.lang.String?>
<AnchorPane styleClass="AnchorPane"
            stylesheets="@SetupSceneStyle.css"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.myuno.controller.SetupController">

    <HBox layoutX="30" layoutY="670"
          alignment="CENTER"
          spacing="15" fx:id="hBoxExit">

        <ImageView styleClass="Image">
            <Image url="@../../images/assets/SetupScene/backImage.png"/>
        </ImageView>

        <Label  text="Salir del juego"/>
    </HBox>

    <StackPane layoutY="170" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <HBox alignment="CENTER" spacing="90">

            <Button fx:id="localButton">
                <styleClass>
                    <String fx:value="Button" />
                    <String fx:value="local" />
                </styleClass>
            </Button>

            <Button fx:id="onlineButton">
                <styleClass>
                    <String fx:value="Button" />
                    <String fx:value="online" />
                </styleClass>
            </Button>

        </HBox>
    </StackPane>

    <VBox alignment="CENTER" spacing="15"
          AnchorPane.topAnchor="300" AnchorPane.bottomAnchor="300"
          AnchorPane.leftAnchor="500" AnchorPane.rightAnchor="500"
          styleClass="dialog-box"
          fx:id="exitDialog">

        <Label fx:id="title" styleClass="dialog-title"/>
        <Label fx:id="message"
               wrapText="true" styleClass="dialog-description"/>

        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="yesButton" text="SÃ­" styleClass="dialog-button" onAction="#setOnActionYesButton"/>
            <Button fx:id="noButton" text="No" styleClass="dialog-button" onAction="#setOnActionNoButton"/>
        </HBox>
    </VBox>

</AnchorPane>
